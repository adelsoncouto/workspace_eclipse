<?php

require_once "interface/MainInterface.php";

class Animal implements MainInterface
{
    private $id;
    private $filhos;
    private $nome;
    private $pergunta;
    private $caracteristica;
    
    public function __construct($id, $nome, $caracterista)
	{
        $this->id = $id;
        $this->nome = $nome;
        $this->caracteristica = $caracterista;
        $this->filhos = [];
        $this->pergunta = "O animal que vocÃª pensou ";
    }
    
    public function getFilhos()
	{
        return $this->filhos;
    }
	
	public function getNome()
	{
        return $this->nome;
    }
    
    public function addFilho($filho)
	{
        $this->filhos[] = $filho;
    }
    
    public function getPergunta()
	{
        return $this->pergunta.$this->getCaracteristica()."?";
    }
}