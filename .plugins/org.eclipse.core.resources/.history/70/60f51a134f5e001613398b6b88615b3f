app.controller("habilidadeOpcaoController", [ "$filter", "$scope", "$cookies",
	"api", function($filter, $scope, $cookies, api) {
	    $scope.usuario = $cookies.getObject('usuario');

	    $scope.habilidade = new habilidadeOpcaoController_habilidade();
	    
	    // gerencia a tela a ser exibida
	    $scope.tela = new Tela($scope);
	    $scope.tela.ativar('tabela');

	} ]);

function habilidadeOpcaoController_habilidade(aId, aHabilidade){
	var _this = this;
	this.lista = [];
	this.id = "";
	this.habilidade = "";

	(function(){
		_this.id = (aId === undefined)?_this.id:aId;
		_this.habilidade = (aHabilidade === undefined)?_this.habilidade:aHabilidade;
	})();
	this.salvar = function(){
		aApi.enviarApi("cadastrarOpcao",1,_this.toJson())
		.success(function(aResp){
			if(aResp.error){
				alertaAtencao(aResp.error.message);
				return;
			}
			alertaSuccess("Salvo com sucesso!");
		})
		.error(function(aResp){
			alertaAtencao(aResp);
		})
	}
				
	this.toJson = function(){
		var _obj = {};
		_obj.id = _this.id;
		_obj.habilidade = _this.habilidade;
		return _obj;			
	}
				
}